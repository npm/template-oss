
name: CI - Release

on:
  workflow_dispatch:
    inputs:
      ref:
        required: true
        type: string
        default: {{ releaseBranch }}
  workflow_call:
    inputs:
      ref:
        required: true
        type: string
      check-sha:
        required: true
        type: string

jobs:
  lint-all:
    {{> jobYml
      jobName="Lint All"
      jobCheck=(obj sha="inputs.check-sha")
      jobCheckout=(obj ref="${{ inputs.ref }}")
    }}
      {{> stepLintYml jobRunFlags=allFlags }}
      {{> stepChecksYml jobCheck=true }}

  test-all:
    {{> jobMatrixYml
      jobName="Test All"
      jobCheck=(obj sha="inputs.check-sha")
      jobCheckout=(obj ref="${{ inputs.ref }}")
    }}
      {{> stepTestYml jobRunFlags=allFlags }}
      {{> stepChecksYml jobCheck=true }}
